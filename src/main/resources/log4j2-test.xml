<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%t] [%X{requestId}] %-5p %c- %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.taxidriverhk.hkadbus2" level="debug">
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>
